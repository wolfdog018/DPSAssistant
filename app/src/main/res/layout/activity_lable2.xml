<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/bgdmain">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="17dp"
        android:layout_marginStart="17dp"
        tools:ignore="MissingConstraints"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"
        android:id="@+id/head">
        <Button
            android:layout_width="90dp"
            android:layout_height="6dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/buttonstyle3" />
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/pills_mobile" />
        <Button
            android:layout_width="90dp"
            android:layout_height="6dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/buttonstyle3" />
    </LinearLayout>

    #------------------------------------------------#

    <LinearLayout
        android:id="@+id/midle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        app:layout_constraintTop_toBottomOf="@+id/head"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="48dp"
                android:layout_height="63dp"
                app:srcCompat="@drawable/unnamed" />

            <Button
                android:id="@+id/samplemedi"
                android:layout_width="232dp"
                android:layout_height="63dp"
                android:layout_marginLeft="25dp"
                android:textAlignment="center"
                android:background="@drawable/buttonstyle"
                android:text="Simple powerful medicine reminder" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dailyRoutine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="48dp"
                android:layout_height="63dp"
                app:srcCompat="@drawable/dailyroutine"
                />

            <Button
                android:id="@+id/dailyalarm"
                android:layout_width="232dp"
                android:layout_height="63dp"
                android:layout_marginLeft="25dp"
                android:background="@drawable/buttonstyle"
                android:text="daily routine"
                android:textAlignment="center"
                android:onClick="dailyroutine"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            >
            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="48dp"
                android:layout_height="63dp"
                app:srcCompat="@drawable/timemobile" />

            <Button
                android:id="@+id/remainder"
                android:layout_width="232dp"
                android:layout_height="63dp"
                android:layout_marginLeft="25dp"
                android:background="@drawable/buttonstyle"
                android:text="Remainder"
                android:textAlignment="center" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            >
            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="48dp"
                android:layout_height="63dp"
                app:srcCompat="@drawable/doctorid" />

            <Button
                android:id="@+id/doctorVisit"
                android:layout_width="232dp"
                android:layout_height="63dp"
                android:layout_marginLeft="25dp"
                android:background="@drawable/buttonstyle"
                android:text="Doctor Visit"
                android:textAlignment="center" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            >
            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="58dp"
                android:layout_height="70dp"
                app:srcCompat="@drawable/emargency" />

            <Button
                android:id="@+id/Emargency"
                android:layout_width="232dp"
                android:layout_height="63dp"
                android:layout_marginLeft="25dp"
                android:background="@drawable/buttonstyle"
                android:text="Emergency"
                android:textAlignment="center" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            >
            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="48dp"
                android:layout_height="63dp"
                app:srcCompat="@drawable/attached" />

            <Button
                android:id="@+id/use6"
                android:layout_width="232dp"
                android:layout_height="63dp"
                android:layout_marginLeft="25dp"
                android:textAlignment="center"
                android:background="@drawable/buttonstyle"
                android:text="FAQ" />
        </LinearLayout>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>